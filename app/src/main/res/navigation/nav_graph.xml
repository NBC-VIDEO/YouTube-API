<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.nbc.video.presenters.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_videoDetailFragment"
            app:destination="@id/videoDetailFragment" />
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_searchFragment_to_myVideoFragment"
            app:destination="@id/myVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.nbc.video.presenters.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_videoDetailFragment"
            app:destination="@id/videoDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_myVideoFragment"
            app:destination="@id/myVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/myVideoFragment"
        android:name="com.nbc.video.presenters.my_video.MyVideoFragment"
        android:label="fragment_my_video"
        tools:layout="@layout/fragment_my_video" >
        <action
            android:id="@+id/action_myVideoFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_myVideoFragment_to_videoDetailFragment"
            app:destination="@id/videoDetailFragment" />
        <action
            android:id="@+id/action_myVideoFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoDetailFragment"
        android:name="com.nbc.video.presenters.detail.VideoDetailFragment"
        android:label="fragment_video_detail"
        tools:layout="@layout/fragment_video_detail" >
        <action
            android:id="@+id/action_videoDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_videoDetailFragment_to_myVideoFragment"
            app:destination="@id/myVideoFragment" />
        <action
            android:id="@+id/action_videoDetailFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
</navigation>